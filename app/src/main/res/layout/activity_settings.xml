<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    tools:ignore="missingPrefix">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        sl:scale_base_width="1080"
        sl:scale_base_height="1920">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모 공개 범위 설정"
            android:textColor="@color/mainpink"
            sl:scale_width="300"
            sl:scale_height="50"
            sl:scale_top="50"
            sl:scale_left="50"
            sl:scale_textsize="40"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모 공개 범위 설정"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            sl:scale_width="500"
            sl:scale_height="100"
            sl:scale_top="120"
            sl:scale_left="50"
            sl:scale_textsize="55"
            tools:ignore="MissingConstraints" />

        <RadioGroup
            android:id="@+id/memo_open_range_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            sl:scale_top="220"
            sl:scale_width="980"
            sl:scale_height="400">

            <RadioButton
                android:id="@+id/memo_open_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="전체 공개"
                android:checked="true"
                android:textSize="16sp"
                android:background="@drawable/settings_list_shape" />

            <RadioButton
                android:id="@+id/memo_open_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="친구 공개"
                android:textSize="16sp"
                android:background="@drawable/settings_list_shape" />

            <RadioButton
                android:id="@+id/memo_not_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:text="비공개"
                android:textSize="16sp"
                android:background="@drawable/settings_list_shape" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모 공개 범위의 기본값은 전체 공개입니다."
            android:textColor="@color/gray"
            android:textAlignment="viewEnd"
            sl:scale_width="980"
            sl:scale_height="50"
            sl:scale_top="620"
            sl:scale_left="50"
            sl:scale_textsize="40"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 공개 범위"
            android:textColor="@color/mainpink"
            sl:scale_height="50"
            sl:scale_left="50"
            sl:scale_textsize="40"
            sl:scale_top="730"
            sl:scale_width="300"
            tools:ignore="MissingConstraints" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/location_open_range_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="위치 공개 범위"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="top"
            android:checked="true"
            android:background="@drawable/settings_list_shape"
            sl:scale_width="980"
            sl:scale_height="110"
            sl:scale_top="800"
            sl:scale_textsize="55"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 공개 범위의 기본값은 전체 공개입니다."
            android:textColor="@color/gray"
            android:textAlignment="viewEnd"
            sl:scale_width="980"
            sl:scale_height="50"
            sl:scale_top="920"
            sl:scale_left="50"
            sl:scale_textsize="40"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어플리케이션 정보"
            android:textColor="@color/mainpink"
            sl:scale_width="300"
            sl:scale_height="50"
            sl:scale_top="1040"
            sl:scale_left="50"
            sl:scale_textsize="40"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어플리케이션 정보"
            android:gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            sl:scale_width="980"
            sl:scale_height="100"
            sl:scale_top="1110"
            sl:scale_left="50"
            sl:scale_textsize="55"
            tools:ignore="MissingConstraints" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</android.support.constraint.ConstraintLayout>
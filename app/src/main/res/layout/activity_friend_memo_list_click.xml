<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendMemoListClickActivity"
    tools:ignore="missingPrefix">

    <android.support.v7.widget.Toolbar
        android:id="@+id/friend_memo_list_click_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints">
    </android.support.v7.widget.Toolbar>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="1920"
        sl:scale_base_width="1080"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/friend_memo_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right"
            android:text="@null"
            sl:scale_top="220"
            sl:scale_left="180"
            sl:scale_width="600"
            sl:scale_textsize="55"
            sl:scale_height="80"/>

        <TextView
            android:id="@+id/friend_memo_contents_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/memo_contents_shape"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLength="1000"
            android:padding="30dp"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            sl:scale_height="850"
            sl:scale_textsize="50"
            sl:scale_top="325"
            sl:scale_width="1080" />

        <TextView
            android:id="@+id/friend_memo_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:gravity="right"
            sl:scale_top="1200"
            sl:scale_width="1000"
            sl:scale_height="70"
            sl:scale_textsize="45"
            sl:scale_left="50"/>
        
        <ImageView
            android:id="@+id/friend_memo_photo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            sl:scale_top="1300"
            sl:scale_width="1080"
            sl:scale_height="450"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</android.support.constraint.ConstraintLayout>
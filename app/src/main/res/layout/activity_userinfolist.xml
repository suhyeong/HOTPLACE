<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserinfolistActivity"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="missingPrefix" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/userinfo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="프로필 관리"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </android.support.v7.widget.Toolbar>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="1920"
        sl:scale_base_width="1080"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@null"
            android:layout_gravity="center_horizontal"
            sl:scale_top="290"
            sl:scale_width="350"
            sl:scale_height="350" />

        <TextView
            android:id="@+id/profile_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 바꾸기"
            android:textColor="@color/maincentercolor"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            sl:scale_top="700"
            sl:scale_width="1080"
            sl:scale_height="70"
            sl:scale_textsize="50"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/userinfolist_shape"
            sl:scale_height="600"
            sl:scale_top="850"
            sl:scale_width="1080" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAlignment="center"
            sl:scale_width="400"
            sl:scale_height="65"
            sl:scale_top="890"
            sl:scale_left="50"
            sl:scale_textsize="50"/>

        <TextView
            android:id="@+id/textview_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textAlignment="center"
            sl:scale_width="400"
            sl:scale_height="65"
            sl:scale_top="1000"
            sl:scale_left="50"
            sl:scale_textsize="50"/>

        <TextView
            android:id="@+id/textview_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textAlignment="center"
            sl:scale_width="400"
            sl:scale_height="65"
            sl:scale_top="1110"
            sl:scale_left="50"
            sl:scale_textsize="50"/>

        <TextView
            android:id="@+id/textview_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 수정"
            android:textAlignment="center"
            sl:scale_width="400"
            sl:scale_height="65"
            sl:scale_top="1220"
            sl:scale_left="50"
            sl:scale_textsize="50"/>

        <TextView
            android:id="@+id/textview_passwd_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 수정 확인"
            android:textAlignment="center"
            sl:scale_width="400"
            sl:scale_height="65"
            sl:scale_top="1330"
            sl:scale_left="50"
            sl:scale_textsize="50"/>

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_textsize="50"
            sl:scale_top="890"
            sl:scale_left="520"
            sl:scale_width="530" />

        <TextView
            android:id="@+id/user_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_textsize="50"
            sl:scale_top="1000"
            sl:scale_left="520"
            sl:scale_width="530" />

        <TextView
            android:id="@+id/user_birth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_textsize="50"
            sl:scale_top="1110"
            sl:scale_left="520"
            sl:scale_width="530" />

        <EditText
            android:id="@+id/user_passwd_modify"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            sl:scale_height="120"
            sl:scale_textsize="50"
            sl:scale_top="1190"
            sl:scale_left="520"
            sl:scale_width="530" />

        <EditText
            android:id="@+id/user_passwd_modify_check"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            sl:scale_height="120"
            sl:scale_textsize="50"
            sl:scale_top="1300"
            sl:scale_left="520"
            sl:scale_width="530" />


        <TextView
            android:id="@+id/user_drop_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴"
            android:textColor="@color/mainred"
            android:gravity="center_horizontal"
            android:paddingTop="11dp"
            android:background="@drawable/userinfolist_shape"
            sl:scale_height="140"
            sl:scale_textsize="50"
            sl:scale_top="1530"
            sl:scale_width="1080" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

</android.support.constraint.ConstraintLayout>
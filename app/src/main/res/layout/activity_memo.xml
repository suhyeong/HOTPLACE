<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoActivity"
    android:id="@+id/create_memo_layout"
    tools:ignore="missingPrefix" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="1920"
        sl:scale_base_width="1080"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/memo_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            sl:scale_top="150"
            sl:scale_width="110"
            sl:scale_height="80"
            sl:scale_textsize="60"
            sl:scale_left="50"/>

        <EditText
            android:inputType="textMultiLine"
            android:id="@+id/edit_memo_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/memo_contents_shape"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:gravity="top"
            android:maxLength="1000"
            android:padding="30dp"
            sl:scale_height="750"
            sl:scale_textsize="50"
            sl:scale_top="250"
            sl:scale_width="1080" />

        <TextView
            android:id="@+id/memo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:gravity="right"
            sl:scale_top="150"
            sl:scale_width="500"
            sl:scale_height="70"
            sl:scale_textsize="55"
            sl:scale_left="500"/>

        <TextView
            android:id="@+id/memo_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:gravity="right"
            sl:scale_top="1030"
            sl:scale_width="1000"
            sl:scale_height="70"
            sl:scale_textsize="45"
            sl:scale_left="50"/>

        <TextView
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 추가"
            sl:scale_top="1200"
            sl:scale_width="250"
            sl:scale_height="80"
            sl:scale_textsize="60"
            sl:scale_left="50"/>

        <ImageView
            android:id="@+id/add_to_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_gray_24dp"
            android:background="@color/transparency"
            sl:scale_top="1205"
            sl:scale_width="80"
            sl:scale_height="80"
            sl:scale_textsize="60"
            sl:scale_left="320"/>

        <ImageView
            android:id="@+id/add_to_take_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_album_gray_24dp"
            android:background="@color/transparency"
            sl:scale_top="1203"
            sl:scale_width="80"
            sl:scale_height="80"
            sl:scale_textsize="60"
            sl:scale_left="420"/>

        <ImageView
            android:id="@+id/memo_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@null"
            sl:scale_left="50"
            sl:scale_top="1315"
            sl:scale_width="400"
            sl:scale_height="300"/>

        <ImageView
            android:id="@+id/memo_photo_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            sl:scale_left="450"
            sl:scale_top="1315"
            sl:scale_width="50"
            sl:scale_height="50"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/friends_layout"
    tools:ignore="missingPrefix" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_width="1080"
        sl:scale_base_height="1920"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/friends_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/friends_button_shape"
            android:text="목록"
            sl:scale_width="360"
            sl:scale_height="130"
            sl:scale_top="50"
            sl:scale_textsize="50" />

        <Button
            android:id="@+id/friends_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/friends_button_shape"
            android:text="검색"
            sl:scale_left="360"
            sl:scale_width="360"
            sl:scale_height="130"
            sl:scale_top="50"
            sl:scale_textsize="50"/>

        <Button
            android:id="@+id/friends_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요청"
            sl:scale_left="720"
            sl:scale_width="360"
            sl:scale_height="130"
            sl:scale_top="50"
            sl:scale_textsize="50"/>

        <FrameLayout
            android:id="@+id/friends_main_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            sl:scale_width="1080"
            sl:scale_height="1600"
            sl:scale_top="200">

        </FrameLayout>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</android.support.constraint.ConstraintLayout>
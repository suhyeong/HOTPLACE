<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:orientation="vertical"
    tools:ignore="missingPrefix" >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        sl:scale_base_width="1080"
        sl:scale_base_height="1920" >

        <ImageView
            android:id="@+id/mainlogo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_fin"
            sl:scale_left="240"
            sl:scale_top="300"
            sl:scale_width="600"
            sl:scale_height="450" />

        <ImageView
            android:id="@+id/mainlogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_fin"
            sl:scale_left="240"
            sl:scale_top="600"
            sl:scale_width="600"
            sl:scale_height="450" />

        <EditText
            android:id="@+id/loginID"
            style="@style/welcome_EditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="ID"
            android:maxLength="25"
            android:focusable="true"
            app:theme="@style/welcome_EditTextStyle"
            sl:scale_width="800"
            sl:scale_left="150"
            sl:scale_textsize="50"
            sl:scale_top="735"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true" />

        <EditText
            android:id="@+id/loginPassword"
            style="@style/welcome_EditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:maxLength="20"
            app:theme="@style/welcome_EditTextStyle"
            sl:scale_width="800"
            sl:scale_left="150"
            sl:scale_top="835"
            sl:scale_textsize="50"
            sl:textview_wrapcontent_direction="bottom"
            sl:textview_wrapcontent_resizesurrounded="true"
            sl:textview_wrapcontent_movesiblings="true" />

        <Button
            android:id="@+id/loginButton"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:onClick="login"
            android:textColor="@color/mainpink"
            android:background="@drawable/welcomebutton_shape"
            style="?android:attr/borderlessButtonStyle"
            sl:scale_width="800"
            sl:scale_height="150"
            sl:scale_left="150"
            sl:scale_top="980"
            sl:scale_textsize="55" />

        <TextView
            android:id="@+id/signup_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/mainlightyellow"
            sl:scale_textsize="46"
            sl:scale_width="500"
            sl:scale_height="65"
            sl:scale_top="1185"
            sl:scale_left="330" />

        <Button
            android:id="@+id/signupButton"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:background="@color/transparency"
            android:textColor="@color/white"
            sl:scale_width="260"
            sl:scale_height="100"
            sl:scale_top="1230"
            sl:scale_left="430"
            sl:scale_textsize="55" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>
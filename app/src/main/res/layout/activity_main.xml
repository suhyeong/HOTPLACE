<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:ignore="missingPrefix" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        ><!--tools:openDrawer="start">-->

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_base_width="1080"
            sl:scale_base_height="1535">

            <TextView
                android:id="@+id/address_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text=""
                sl:scale_width="1080"
                sl:scale_height="160"
                sl:scale_textsize="47"/>

            <fragment
                android:id="@+id/map"
                android:name = "com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="160"
                sl:scale_width="1080"
                sl:scale_height="650" />

            <FrameLayout
                android:id="@+id/traffic_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                sl:scale_top="900"
                sl:scale_width="530"
                sl:scale_height="550"
                sl:scale_left="550" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_icon"
                android:gravity="center"
                android:src="@null"
                sl:scale_top="900"
                sl:scale_width="500"
                sl:scale_height="280"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_nowtemp"
                android:gravity="center"
                android:text=""
                sl:scale_top="1148"
                sl:scale_width="500"
                sl:scale_height="135"
                sl:scale_textsize="125"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_maxtemp"
                android:gravity="center"
                android:text=""
                sl:scale_top="1301"
                sl:scale_left="110"
                sl:scale_width="100"
                sl:scale_height="130"
                sl:scale_textsize="60"/>

            <TextView
                android:id="@+id/maxmintemp_div"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="/"
                sl:scale_left="220"
                sl:scale_textsize="70"
                sl:scale_top="1315"
                sl:scale_width="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weather_mintemp"
                android:gravity="center"
                android:text=""
                sl:scale_top="1300"
                sl:scale_left="270"
                sl:scale_width="100"
                sl:scale_height="130"
                sl:scale_textsize="60"/>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header"
            app:menu="@menu/main_drawer">
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
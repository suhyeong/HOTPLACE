<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsListClickActivity"
    tools:ignore="missingPrefix"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/friends_list_click_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp"
        app:contentInsetStart="0dp"
        tools:ignore="MissingConstraints">
    </android.support.v7.widget.Toolbar>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="1920"
        sl:scale_base_width="1080"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friend_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@null"
            android:layout_gravity="center_horizontal"
            sl:scale_top="290"
            sl:scale_width="350"
            sl:scale_height="350" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/userinfolist_shape"
            sl:scale_height="400"
            sl:scale_top="790"
            sl:scale_width="1080" />

        <TextView
            android:id="@+id/textview_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAlignment="center"
            sl:scale_height="65"
            sl:scale_left="50"
            sl:scale_textsize="50"
            sl:scale_top="845"
            sl:scale_width="400" />

        <TextView
            android:id="@+id/textview_friend_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textAlignment="center"
            sl:scale_height="65"
            sl:scale_left="50"
            sl:scale_textsize="50"
            sl:scale_top="950"
            sl:scale_width="400" />

        <TextView
            android:id="@+id/textview_friend_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textAlignment="center"
            sl:scale_width="400"
            sl:scale_height="65"
            sl:scale_top="1055"
            sl:scale_left="50"
            sl:scale_textsize="50"/>

        <TextView
            android:id="@+id/friend_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_textsize="50"
            sl:scale_top="845"
            sl:scale_left="520"
            sl:scale_width="530" />

        <TextView
            android:id="@+id/friend_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_textsize="50"
            sl:scale_top="950"
            sl:scale_left="520"
            sl:scale_width="530" />

        <TextView
            android:id="@+id/friend_birth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            sl:scale_height="65"
            sl:scale_textsize="50"
            sl:scale_top="1055"
            sl:scale_left="520"
            sl:scale_width="530" />

        <TextView
            android:id="@+id/friend_memo_not_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모 비공개 계정입니다."
            android:gravity="fill_vertical"
            android:textAlignment="center"
            android:background="@drawable/userinfolist_shape"
            sl:scale_textsize="40"
            sl:scale_width="1080"
            sl:scale_top="1250"
            sl:scale_height="150"/>

        <TextView
            android:id="@+id/friend_memo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메모가 없습니다."
            android:gravity="fill_vertical"
            android:textAlignment="center"
            android:background="@drawable/userinfolist_shape"
            sl:scale_textsize="40"
            sl:scale_width="1080"
            sl:scale_top="1250"
            sl:scale_height="150"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fillViewport="true"
            sl:scale_width="1080"
            sl:scale_height="500"
            sl:scale_top="1250"
            tools:ignore="MissingConstraints">

        <ListView
            android:id="@+id/friends_memo_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            sl:scale_width="1080"
            sl:scale_height="600"
            sl:scale_top="1250" />
        </ScrollView>
    </com.ssomai.android.scalablelayout.ScalableLayout>

</android.support.constraint.ConstraintLayout>